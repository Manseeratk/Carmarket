<div class="pointer-events-auto w-screen max-w-md">
  <div class="flex h-full flex-col overflow-y-scroll bg-white shadow-xl rounded-lg">
    <div class="flex-1 overflow-y-auto px-4 py-6 sm:px-6">
      <div class="flex items-start justify-between">
        <h2 class="text-lg font-medium text-gray-900" id="slide-over-title">Shopping Cart</h2>
      </div>

      <div class="mt-8">
        <div class="flow-root">
          <ul role="list" class="-my-6 divide-y divide-gray-200">
            <% @cart.cart_items.each do |cart_item| %>
              <li class="flex py-6">
                <div class="ml-4 flex flex-1 flex-col">
                  <div>
                    <div class="flex justify-between text-base font-medium text-gray-900">
                      <h3>
                        <a href="#" class="text-indigo-600 hover:underline"><%= cart_item.car.name %></a>
                      </h3>
                      <p class="ml-4">$<%= total_price(cart_item) %></p>
                    </div>
                  </div>
                  <div class="flex flex-1 items-end justify-between text-sm">
                    <p class="text-gray-500">Qty <%= cart_item.quantity %></p>
                    <div class="flex items-center">
                      <%= link_to add_item_path(cart_item.car), class: "text-indigo-600 hover:text-indigo-500" do %>
                        <i class="fas fa-arrow-up"></i>
                      <% end %>
                      <%= link_to remove_item_path(cart_item.car), class: "text-indigo-600 hover:text-indigo-500" do %>
                        <i class="fas fa-arrow-down"></i>
                      <% end %>
                      <%= link_to delete_item_path(cart_item.car), class: "text-red-600 hover:text-red-500 ml-4" do %>
                        <i class="fas fa-trash-alt"></i>
                      <% end %>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div class="border-t border-gray-200 px-4 py-6 sm:px-6">
      <div class="flex justify-between text-base font-medium text-gray-900">
        <p>Subtotal</p>
        <p class="text-green-600">$<%= cart_total_price(@cart) %></p>
      </div>
      <%= link_to "Checkout", new_order_path, class: "btn btn-primary mt-2 text-white" %>
      <p class="mt-0.5 text-sm text-gray-500">Shipping and taxes calculated at checkout.</p>
      <div class="mt-6 flex justify-center text-center text-sm text-gray-500">
        <p>
          <%= link_to "Continue Shopping", cars_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
        </p>
      </div>
    </div>
  </div>
</div>
